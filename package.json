{
  "name": "@matchory/docker-swarm-deployment-action",
  "description": "A GitHub Action to deploy a Docker Swarm stack.",
  "version": "0.0.1",
  "author": {
    "name": "Moritz Friedrich",
    "email": "moritz@matchory.com",
    "url": "https://matchory.com"
  },
  "type": "module",
  "private": true,
  "homepage": "https://github.com/matchory/docker-swarm-deployment-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matchory/docker-swarm-deployment-action.git"
  },
  "bugs": {
    "url": "https://github.com/matchory/docker-swarm-deployment-action/issues"
  },
  "keywords": [
    "actions",
    "docker",
    "docker-swarm",
    "deployment",
    "cluster",
    "devops"
  ],
  "exports": {
    ".": "./dist/index.mjs"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.9.2",
  "scripts": {
    "bundle": "npm run format:write && npm run package",
    "ci-test": "npx vitest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "package": "npx unbuild --config build.config.ts --parallel",
    "package:watch": "npm run package -- --watch",
    "test": "npx vitest --run",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run package"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "dockerode": "^4.0.5",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.8",
    "@github/local-action": "^3.1.4",
    "@types/dockerode": "^3.3.38",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.17.30",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-import-resolver-typescript": "^4.3.4",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.6",
    "make-coverage-badge": "^1.2.0",
    "msw": "^2.7.5",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.3.0",
    "rollup": "^4.40.0",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.1.1"
  }
}
