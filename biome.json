{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": ["src/**/*.ts", "tests/**/*.ts", "*.config.*", "*.json"]
  },
  "formatter": { "indentStyle": "space" },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    },
    "includes": [
      "**",
      "!**/coverage",
      "!**/out",
      "!**/dist",
      "!**/linter",
      "!**/node_modules"
    ]
  },
  "javascript": { "globals": ["exports", "SharedArrayBuffer", "Atomics"] },
  "overrides": [
    {
      "includes": ["tests/**/*.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noTemplateCurlyInString": "off",
            "noEmptyBlockStatements": "off"
          }
        }
      }
    }
  ]
}
